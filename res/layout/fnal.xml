<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EAEAEA"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/fundo"
        android:background="@drawable/fundo"
        android:id="@+id/ivFundo"/>
    
    <ImageView         
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"        
        android:layout_marginTop="15dp"
        android:src="@drawable/logofinal"
        android:background="@drawable/logofinal"
        android:id="@+id/ivLogo"/>
    
    <TextView
        android:layout_below="@+id/ivFundo"
        android:id="@+id/tvSorteio"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="90dp"
        android:layout_height="wrap_content"
        android:text="--" />
    
     <ImageButton
         android:id="@+id/btnIniciar"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tvSorteio"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="30dp"
         android:background="@drawable/selector_nvsorteio"
         android:src="@drawable/selector_nvsorteio" />
    
</RelativeLayout>
